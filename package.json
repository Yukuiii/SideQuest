{
  "name": "side-quest",
  "displayName": "Side Quest",
  "description": "",
  "version": "0.0.8",
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:side-quest.mainView",
    "onCommand:side-quest.helloWorld",
    "onCommand:side-quest.reader.toggleDisguise",
    "onCommand:side-quest.market.show",
    "onCommand:side-quest.market.refresh",
    "onCommand:side-quest.market.nextSymbol"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "side-quest",
          "title": "Side Quest",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "side-quest": [
        {
          "type": "webview",
          "id": "side-quest.mainView",
          "name": "Side Quest"
        }
      ]
    },
    "configuration": {
      "title": "Side Quest",
      "properties": {
        "side-quest.reader.lockTheme": {
          "type": "string",
          "default": "auto",
          "enum": ["auto", "light", "dark"],
          "markdownEnumDescriptions": [
            "跟随 VS Code 主题实时切换。",
            "强制使用浅色模式。",
            "强制使用深色模式。"
          ],
          "markdownDescription": "阅读者模式主题跟随策略：自动跟随 VS Code 或固定为浅色/深色。"
        },
        "side-quest.market.watchlist": {
          "type": "array",
          "default": [],
          "markdownDescription": "操盘手自选标的列表，每项包含 type/symbol/sourceId，可选 displayName。"
        },
        "side-quest.market.refreshInterval": {
          "type": "number",
          "default": 60,
          "markdownDescription": "行情刷新间隔（秒）。"
        },
        "side-quest.market.rotateInterval": {
          "type": "number",
          "default": 3,
          "markdownDescription": "状态栏轮播间隔（秒）。"
        },
        "side-quest.market.autoRefresh": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否自动刷新行情数据。"
        },
        "side-quest.market.colorMode": {
          "type": "string",
          "enum": ["default", "reverse", "theme"],
          "default": "default",
          "markdownDescription": "涨跌颜色模式：default(红涨绿跌)/reverse/跟随主题。"
        }
      }
    },
    "commands": [
      {
        "command": "side-quest.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "side-quest.reader.toggleDisguise",
        "title": "Side Quest: 切换伪装（Boss Key）"
      },
      {
        "command": "side-quest.market.show",
        "title": "Side Quest: 打开操盘手"
      },
      {
        "command": "side-quest.market.refresh",
        "title": "Side Quest: 刷新行情"
      },
      {
        "command": "side-quest.market.nextSymbol",
        "title": "Side Quest: 切换下一个标的"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run compile:webview && npm run check-types && npm run lint && node esbuild.js",
    "compile:webview": "npm run --prefix src/webview build",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:webview": "npm run --prefix src/webview build -- --watch",
    "package": "npm run compile:webview && npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ignore-pattern src/webview",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "iconv-lite": "^0.7.0"
  }
}
